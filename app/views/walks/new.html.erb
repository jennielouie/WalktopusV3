
<div id="walk_form">
  <h2 style='text-align:center'>Preview a New Walk</h2>
  <%= form_for @walk, role: "form" do  |f|  %>
  <div class="form-group">
      <%=f.label "Starting from?" %>
    <%= f.text_field :start, :class=> "form-control input-lg",:placeholder =>"Enter starting address or landmark" %>
  </div>

  <div class = "form-group">
    <%= f.label "Walking to where?" %> <br>
    <%=f.text_field :end, :class => "form-control input-lg", :placeholder => "Enter destination address or landmark" %>
  </div>

  <div class = "form-action">
    <%= f.submit :class => "btn btn-primary btn-lg btn-block" %>
  </div>

</div>
<% end %>

